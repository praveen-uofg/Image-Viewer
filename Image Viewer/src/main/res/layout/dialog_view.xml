<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/card_album_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dialog_image"
                android:layout_width="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/article_title"
                android:paddingTop="@dimen/article_title"
                android:paddingRight="@dimen/article_title_padding"
                android:paddingLeft="@dimen/article_title_padding"
                android:paddingStart="@dimen/article_title_padding"
                android:paddingEnd="@dimen/article_title_padding"
                android:textColor="@android:color/white"
                android:background="@color/article_title_background"
                android:textSize="@dimen/article_title"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>